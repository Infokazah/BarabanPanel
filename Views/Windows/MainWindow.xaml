<Window x:Class="BarabanPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:BarabanPanel.ViewModels"
        xmlns:pages="clr-namespace:BarabanPanel.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <Window.DataContext>
        <vm:ViewModelMainWindow/>
    </Window.DataContext>
    <Window.InputBindings>
        <KeyBinding Key="Q" Command="{Binding MakeSound}" CommandParameter="1" />
        <KeyBinding Key="W" Command="{Binding MakeSound}" CommandParameter="2" />
        <KeyBinding Key="E" Command="{Binding MakeSound}" CommandParameter="3" />
        <KeyBinding Key="R" Command="{Binding MakeSound}" CommandParameter="4" />
    </Window.InputBindings>

    <TabControl Background="#FF060505">
        <TabItem Header="Барабанная панель" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />

                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button Grid.Row="0" Grid.Column="0" Command="{Binding MakeSound}" CommandParameter="1">
                    
                </Button>
                <Button Grid.Row="0" Grid.Column="1" Command="{Binding MakeSound}" CommandParameter="2"/>
                <Button Grid.Row="1" Grid.Column="0" Command="{Binding MakeSound}" CommandParameter="3"/>
                <Button Grid.Row="1" Grid.Column="1" Command="{Binding MakeSound}" CommandParameter="4"/>
            </Grid>
        </TabItem>
        <TabItem Header="Попадание в ритм">
            <DockPanel>
                <pages:GetInRitmControll DockPanel.Dock="Bottom" DataContext="{Binding _getInRitmViewModel}" Height="905" Width="1738"/>
            </DockPanel>
        </TabItem>
        <TabItem Header="Мелодии">
            <DockPanel>
                <pages:GetInMelodyControll DockPanel.Dock="Bottom" DataContext="{Binding _getInMelodyViewModel}" Height="905" Width="1738"/>
            </DockPanel>
        </TabItem>
    </TabControl>
</Window>
