                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <ComboBox Style="{DynamicResource ComboBoxStyle1}"  
       Grid.Column="1"
       ItemsSource="{Binding Melodies}" 
       SelectedItem="{Binding MelodyName}" DockPanel.Dock="Top" 
       FontSize="28" Background="{StaticResource ElementsBrush}" 
       Foreground="{StaticResource MainBrushForeground}"
       Margin="15"
       BorderBrush="{StaticResource BorderBrush}"
       BorderThickness="5">
                </ComboBox>
                <DockPanel Grid.Row="0" Grid.Column="2" Margin="10">

                    <TextBlock TextAlignment="Center"
                               Foreground="{StaticResource MainBrushForeground}"
                               Background="Transparent" FontSize="24" 
                               Height="37" 
                               DockPanel.Dock="Top" Text="№ Барабана"/>
                    <Border Style="{StaticResource StandartBorder}" DockPanel.Dock="Bottom" Margin="5 0 5 5">
                        <TextBlock Text="{Binding BarabanName}" FontSize="38" Foreground="{StaticResource MainBrushForeground}" VerticalAlignment="Center" />
                    </Border>
                </DockPanel>

                <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="0">
                    <TextBlock Text="Ритм" FontSize="24" Foreground="{StaticResource MainBrushForeground}" Margin="10 0 0 0"/>
                    <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="5" CornerRadius="20"   Margin="10" Height="50">
                        <Res:CornerProgressBar  Style="{StaticResource CircleProgressBar}"  Value="{Binding CurrentTime}" Maximum="{Binding CurrentTemp}" 
                            Background="{StaticResource BorderBrush}" 
                            Foreground="{StaticResource MainBrushForeground}"
                            BorderBrush="{StaticResource BorderBrush}"
                            RectangleCornerRadius="20"
                            CornerRadius="15"/>
                    </Border>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1" Visibility="{Binding RitmVisibility}" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Border Style="{StaticResource StandartBorder}" Grid.Column="1" Margin="300 15 300 15" >
                    <StackPanel Orientation="Horizontal" Background="{StaticResource ElementsBrush}"  Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" >
                        <TextBlock Text="Ритм: "  FontSize="36" Foreground="{StaticResource MainBrushForeground}"/>
                        <TextBox Template="{DynamicResource TextBoxTemplate1}" Text="{Binding CurrentTemp}" FontSize="36" Width="Auto" Style="{StaticResource StandartTextBox}" BorderBrush="Transparent"/>
                    </StackPanel>
                </Border>
                <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="0">
                    <TextBlock Text="Ритм" FontSize="24" Foreground="{StaticResource MainBrushForeground}" Margin="10 0 0 0"/>
                    <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="5" CornerRadius="20"   Margin="10" Height="50">
                        <Res:CornerProgressBar  Style="{StaticResource CircleProgressBar}"  Value="{Binding CurrentTime}" Maximum="{Binding CurrentTemp}" 
        Background="{StaticResource BorderBrush}" 
        Foreground="{StaticResource MainBrushForeground}"
        BorderBrush="{StaticResource BorderBrush}"
        RectangleCornerRadius="20"
        CornerRadius="15"/>
                    </Border>
                </StackPanel>
                <DockPanel Grid.Row="0" Grid.Column="2" Margin="10">
                    <TextBlock TextAlignment="Center"
                            Foreground="{StaticResource MainBrushForeground}"
                            Background="Transparent" FontSize="24" 
                            Height="37" 
                            DockPanel.Dock="Top" Text="Счёт"/>
                    <Border Style="{StaticResource StandartBorder}" DockPanel.Dock="Bottom" Margin="5 0 5 5">
                        <TextBlock Text="{Binding Score}" FontSize="38" TextAlignment="Center" Foreground="{StaticResource MainBrushForeground}" VerticalAlignment="Center" />
                    </Border>
                </DockPanel>
            </Grid>
        </Grid>
        <Grid HorizontalAlignment="Left" Margin="0,111,0,0" Grid.RowSpan="2" Width="1744" Grid.ColumnSpan="2">
            <Grid.Background>
                <ImageBrush ImageSource="pack://siteoforigin:,,,/Images/Drums.png" Opacity="1"/>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="436*" />
                <ColumnDefinition Width="479*" />
                <ColumnDefinition Width="393*" />
                <ColumnDefinition Width="436*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="252*"/>
                <RowDefinition Height="216*"/>
                <RowDefinition Height="421*"/>
            </Grid.RowDefinitions>
            <Button Command="{Binding MakeSound}" CommandParameter="1" Style="{StaticResource TransparentButtonStyle}" Margin="270,78,0,10"/>
            <Button Command="{Binding MakeSound}" CommandParameter="2" Style="{StaticResource TransparentButtonStyle}" Margin="361,26,348,24" Grid.Row="1" Grid.ColumnSpan="2"/>
            <Button Grid.Row="2" Grid.Column="1" Command="{Binding MakeSound}" CommandParameter="3" Style="{StaticResource TransparentButtonStyle}" Margin="10,10,186,155"/>
            <Button Grid.Column="1" Command="{Binding MakeSound}" CommandParameter="4" Style="{StaticResource TransparentButtonStyle}" Margin="183,160,43,64" Cursor="Hand" Grid.RowSpan="2"/>
            <Button Grid.Row="0" Grid.Column="2" Command="{Binding MakeSound}" CommandParameter="5" Style="{StaticResource TransparentButtonStyle}" Margin="43,160,93,64" Grid.RowSpan="2"/>
            <Button Grid.Column="3" Command="{Binding MakeSound}" CommandParameter="6" Style="{StaticResource TransparentButtonStyle}" Margin="38,78,177,10"/>
            <Button Grid.Row="1" Grid.Column="2" Command="{Binding MakeSound}" CommandParameter="7" Style="{StaticResource TransparentButtonStyle}" Margin="350,30,288,24" Grid.ColumnSpan="2" />
            <Button Grid.Row="2" Grid.Column="2" Command="{Binding MakeSound}" CommandParameter="8" Style="{StaticResource TransparentButtonStyle}" Margin="202,10,384,155" Grid.ColumnSpan="2" />
            <Button Style="{DynamicResource CircleButton}" Content="Начать обучение" BorderBrush="{StaticResource MainBrushForeground}" Width="Auto"
                    Background="{StaticResource BorderBrush}" Foreground="{StaticResource MainBrushForeground}"
                    Command="{Binding StartCommand}"  FontSize="38"
                    DockPanel.Dock="Bottom" Grid.Row="2" RenderTransformOrigin="0.5,0.5" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Bottom"
                    Padding="15"
                    Margin="15">
            </Button>
        </Grid>
    </Grid>
</Window>
