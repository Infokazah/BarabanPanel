<UserControl x:Class="BarabanPanel.Views.GetInRitmControll"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:BarabanPanel.ViewModels"
             xmlns:local="clr-namespace:BarabanPanel.Views"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance vm:GetInRitmViewModel, d:IsDesignTimeCreatable=True}"
            d:DesignHeight="1000" d:DesignWidth="1900">
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="15*"/>
                    <RowDefinition/>
        </Grid.RowDefinitions>
                <ProgressBar Width="120" Height="16" Value="{Binding CurrentTime}" Maximum="3"/>
                <Ellipse Fill="Gray" Grid.Row="1">
                    <Ellipse.InputBindings>
                        <MouseBinding Gesture="LeftClick" Command="{Binding CheckTime}"/>
                    </Ellipse.InputBindings>
                </Ellipse>
        <Button Name="StartButton" Grid.Row="2" Content="{Binding CurrentText}" 
                FontSize="24" Command="{Binding StartCommand}" />
    </Grid>
        </UserControl>
